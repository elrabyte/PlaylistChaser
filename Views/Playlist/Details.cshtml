@model PlaylistModel
@{
    ViewData["Title"] = "Details";
}

<h4>Playlist</h4>

<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            @Html.LabelFor(m => m.Name)
            @Html.DisplayFor(m => m.Name)
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description)
            @Html.DisplayFor(m => m.Description)
        </div>
        <div class="form-group row">
            <div class="col">
                <a asp-action="CheckPlaylist" asp-route-id="@Model.Id" class="btn btn-primary">
                    Check
                </a>
            </div>
        </div>
    </div>
</div>
