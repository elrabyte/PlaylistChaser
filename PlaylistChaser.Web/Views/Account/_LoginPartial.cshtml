@using PlaylistChaser.Web.Models.ViewModel
@using PlaylistChaser.Web.Util;
@model LoginViewModel


<div class="row">
    <div class="col-12">
        <form asp-controller="Account" asp-action="Login" method="post" class="form">
            <div class="form-group">
                @Html.BsLabelFor(model => model.UserName)
                <div class="col-sm-9">
                    @Html.BsTextBoxFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.BsLabelFor(model => model.Password)
                <div class="col-sm-9">
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>

    </div>
</div>