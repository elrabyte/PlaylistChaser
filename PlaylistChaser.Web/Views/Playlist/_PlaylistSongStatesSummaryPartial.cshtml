@using PlaylistChaser.Web.Util;
@using PlaylistChaser.Web.Models;
@using static PlaylistChaser.Web.Util.BuiltInIds;
@model List<IGrouping<Sources,PlaylistSongState>>

<div class="row">
    <div class="col-md-10">
        <h5>Playlist songs states</h5>
        @foreach (var sources in Model)
        {
            var songsAddedCount = sources.Count(s => s.StateId == PlaylistSongStates.Added);
            var songsNotAddedCount = sources.Count(s => s.StateId == PlaylistSongStates.NotAdded);
            var songsTotalCount = sources.Count();
            <div class="form-group row">
                @Html.BsLabel(sources.Key.ToString())
                <div class="col-sm-10">
                    @Html.BsDisplay($"Songs added: {songsAddedCount} / {songsTotalCount}")
                </div>
            </div>
        }
    </div>
</div>
